.content-body
  ul.config-sections
    li
      h1 Brightness Mode
      div
        .pill-switch
          input(
            type="radio"
            id="theme_dark"
            name="brightness"
            value="dark"
            ng-model="$parent.conf.brightness"
            checked
          )
          label(for="theme_dark") Dark
          input(
            type="radio"
            id="theme_light"
            name="brightness"
            value="light"
            ng-model="$parent.conf.brightness"
          )
          label(for="theme_light") Light

    li
      h1 Contrast Alternatives
      div
        .pill-switch
          input(
            type="radio"
            id="theme_soft"
            name="contrast"
            value="soft"
            ng-model="$parent.conf.contrast"
          )
          label(for="theme_soft") Soft
          input(
            type="radio"
            id="theme_medium"
            name="contrast"
            value="medium"
            ng-model="$parent.conf.contrast"
            checked
          )
          label(for="theme_medium") Medium
          input(
            type="radio"
            id="theme_hard"
            name="contrast"
            value="hard"
            ng-model="$parent.conf.contrast"
          )
          label(for="theme_hard") Hard

    li
      h1 Accent Colors
      div
        .pill-switch
          input(
            type="radio"
            id="accent_none"
            name="accent"
            value=""
            ng-model="$parent.conf.accent"
            checked
          )
          label(for="accent_none") None
          input(
            type="radio"
            id="accent_red"
            name="accent"
            value="red"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_red") Red
          input(
            type="radio"
            id="accent_green"
            name="accent"
            value="green"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_green") Green
          input(
            type="radio"
            id="accent_yellow"
            name="accent"
            value="yellow"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_yellow") Yellow
          input(
            type="radio"
            id="accent_blue"
            name="accent"
            value="blue"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_blue") Blue
          input(
            type="radio"
            id="accent_purple"
            name="accent"
            value="purple"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_purple") Purple
          input(
            type="radio"
            id="accent_aqua"
            name="accent"
            value="aqua"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_aqua") Aqua
          input(
            type="radio"
            id="accent_orange"
            name="accent"
            value="orange"
            ng-model="$parent.conf.accent"
          )
          label(for="accent_orange") Orange

    li
      h1 Accent Color Modifiers
      div
        .pill-switch
          input(
            type="radio"
            id="accent_mod_none"
            name="accent-mod"
            value=""
            ng-model="$parent.conf.accentMod"
            checked
          )
          label(for="accent_mod_none") None
          input(
            type="radio"
            id="accent_mod_neutral"
            name="accent-mod"
            value="neutral"
            ng-model="$parent.conf.accentMod"
          )
          label(for="accent_mod_neutral") Neutral
          input(
            type="radio"
            id="accent_mod_opposite"
            name="accent-mod"
            value="opposite"
            ng-model="$parent.conf.accentMod"
          )
          label(for="accent_mod_opposite") Opposite

    li
      h1 Sidebar Spacing
      div
        .pill-switch
          input(
            type="radio"
            id="sidebar_spacing_cozy"
            name="sidebar-spacing"
            value="sidebar-cozy"
            ng-model="$parent.conf.sidebarSpacing"
          )
          label(for="sidebar_spacing_cozy") Cozy
          input(
            type="radio"
            id="sidebar_spacing_comfortable"
            name="sidebar-spacing"
            value="sidebar-comfortable"
            ng-model="$parent.conf.sidebarSpacing"
          )
          label(for="sidebar_spacing_comfortable") Comfortable
          input(
            type="radio"
            id="sidebar_spacing_default"
            name="sidebar-spacing"
            value=""
            ng-model="$parent.conf.sidebarSpacing"
            checked
          )
          label(for="sidebar_spacing_default") Default
          input(
            type="radio"
            id="sidebar_spacing_compact"
            name="sidebar-spacing"
            value="sidebar-compact"
            ng-model="$parent.conf.sidebarSpacing"
          )
          label(for="sidebar_spacing_compact") Compact
          input(
            type="radio"
            id="sidebar_spacing_cramped"
            name="sidebar-spacing"
            value="sidebar-cramped"
            ng-model="$parent.conf.sidebarSpacing"
          )
          label(for="sidebar_spacing_cramped") Cramped

    li
      h1 Sidebar Font Size
      div
        .pill-switch
          each fontSize in [10, '11 (Default)', 12, 13, 14, 15, 16]
            - var value = `sidebar-font-size-${fontSize}`
            if fontSize === '11 (Default)'
              - value = '';
            input(
              type="radio"
              id="sidebar_font_#{fontSize}"
              name="sidebar-font"
              value="#{value}"
              ng-model="$parent.conf.sidebarFontSize"
            )
            label(for="sidebar_font_#{fontSize}") #{fontSize}
